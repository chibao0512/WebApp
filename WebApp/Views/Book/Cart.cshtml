@model List<Cart>

@if (Model.Count > 0)
{

    decimal total = 0;
    int stt = 1;

    <table class="table">
        <tr>
            <th>#</th>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
        @foreach (var cartitem in Model)
        {
            var Total= cartitem.Cart_Quantity * cartitem.book.Book_Price;
            total += Total;

            <tr>
                <td>@(stt++)</td>
                <td>@cartitem.book.Book_Title</td>
                <td>@(cartitem.book.Book_Price.ToString("n0"))</td>

                <td><input asp-for="@cartitem.Cart_Quantity" id="@($"quantity-{cartitem.book.Book_Id}")" /></td>

                <td>@(Total.ToString("n0"))</td>
                <td>
                    <button class="btn btn-success updatecartitem"
                    data-id="@cartitem.book.Book_Id">
                        Update
                    </button>
                    <a asp-action="removecart" asp-route-id="@cartitem.book.Book_Id"
               class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="4" class="text-right">Total Money</td>
            <td>@(total.ToString("n0"))</td>
            <td></td>
        </tr>
    </table>

    <a asp-controller="Product" asp-action="Checkout" class="btn btn-success">Confirm</a>

    @section Scripts {
    <script>
        $(document).ready(function () {
            $(".updatecartitem").click(function (event) {
                event.preventDefault();
                var productid = $(this).attr("data-id");
                var quantity = $("#quantity-" + productid).val();
                $.ajax({
                    type: "POST",
                    url: "@Url.RouteUrl("UpdateCart")",
                    data: {
                        id: productid,
                        quanty: quantity
                    },
                    success: function (result) {
                        window.location.href = "@Url.RouteUrl("Cart")";
                    }
                });
            });
        });
    </script>
      }
}