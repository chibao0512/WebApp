
@model IEnumerable<Book>

<div class="container-fluid py-5">
    @foreach (var book in Model)
    {
         <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Detail Book</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    <div class="carousel-item active">
                            <img src="https://tse3.mm.bing.net/th?id=OIP.5wQRNWNNG7QXA0-whuwv4gHaE7&pid=Api&P=0" class="card-img-top">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">Name: @book.Book_Title</h3>
            <h3 class="font-weight-semi-bold mb-4">Price: @book.Book_Price</h3>
            <p class="mb-4">Description: @book.Book_Description</p>
            <p class="mb-4">Genre: @book.genre.Gen_Name</p>
                <p class="mb-4">Author: @book.Book_Author</p>
                <a asp-action="AddToCart" asp-route-id="@book.Book_Id" class="btn btn-secondary btn-sm float-right">Add To Cart</a>
        </div>
    </div>
    }
   
</div>