@model IEnumerable<Book>
<div class="container-fluid pt-5">
<div class="row px-xl-5 pb-3">
    @foreach (var book in Model)
    {
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="card product-item border-0 mb-4">
                    <img src="https://tse3.mm.bing.net/th?id=OIP.5wQRNWNNG7QXA0-whuwv4gHaE7&pid=Api&P=0" class="card-img-top">
                <div class="card-body">
                    
                        <h5 class="card-title">Title: @book.Book_Title</h5>
                    <p class="card-text">Description: @book.Book_Description</p>
                </div>
              
                      <div class="card-footer">
                          <a>Price:</a>
                           <span class="text-muted">@(book.Book_Price.ToString("n0"))VND</span>
                           <br>
                           <br>
                        <a asp-action="AddToCart" asp-route-id="@book.Book_Id" class="btn btn-primary btn-sm float-right">Add To Cart</a>
                        <a asp-action="Details" asp-route-id="@book.Book_Id" class="btn btn-warning btn-sm float-right">View Detail</a>
                    </div>
                       
            </div>

        </div>
    }
</div>
</div>

