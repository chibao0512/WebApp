@model ChangePassword

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["Password"] != null)
{
    <div class="alert alert-danger">
        <strong>
            Fail
        </strong>@TempData["Password"]
    </div>
}
<br />

<div class="col-md-8 grid-margin stretch-card" style="margin-left:230px">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title" style="text-align:center">Change Owner Account</h3>
            <form asp-controller="Admin" asp-action="EditOwner" asp-route-ownerid="@ViewData["id"]" method="post">
                <div class="form-group">
                    <label>Current Password</label>
                    <input class="form-control" type="password" asp-for="CurrentPassword" />
                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                </div>
                <div class="form-group">
                    <label>NewPassword</label>
                    <input class="form-control" type="password" asp-for="NewPassword" />

                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>

                <div class="form-group">
                    <label>ConfirmPassword</label>
                    <input class="form-control" type="password" asp-for="ConfirmPassword" />

                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>


                <input type="submit" value="Update" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>


